      <tr>
        <td><%= school.student %><%= image_tag school.avatar.url(:thumb), class: "img-responsive" %></td>
        <td><%= school.teacher %></td>
        <td><%= school.pet %></td>
        <td><%= school.grade %></td>


        <td><%= link_to 'Select', school %></td>
        <td><%= link_to 'Update', edit_school_path(school) %></td>
        <td><%= link_to 'Delete', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
